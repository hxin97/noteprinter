<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/theme_blue</item>
        <item name="actionMenuTextColor">@color/theme_blue</item>
    </style>
    
    <style name="LoadingDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 设置加载窗口透明和背景变暗 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="toolbar_blue_theme" parent="@style/ThemeOverlay.AppCompat.Light">
        <!-- 更改toolbar样式 -->
        <item name="colorControlNormal">@color/theme_blue</item>
    </style>

    <style name="MyPopupWindowAnimStyle">
        <!-- 指定弹出窗口的动画 -->
        <item name="android:windowEnterAnimation">@anim/anim_pop_show</item>
        <!-- 指定关闭窗口的动画 -->
        <item name="android:windowExitAnimation">@anim/anim_pop_hide</item>
    </style>
</resources>
